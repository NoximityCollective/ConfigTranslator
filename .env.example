# ConfigTranslator Environment Variables
# Copy this file to .env.local and fill in your actual values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cloudflare D1 Database ID (for translation counter and analytics)
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id_here

# Cloudflare KV Namespace ID (for rate limiting)
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id_here

# IP Hashing Salt (for privacy protection)
IP_HASH_SALT=your_random_salt_string_here

# Development Environment
NODE_ENV=production
