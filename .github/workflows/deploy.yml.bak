name: Deploy to Cloudflare Pages

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    name: Deploy
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build application
        run: npm run build

      - name: Create wrangler.toml from template
        run: |
          cp wrangler.toml wrangler.deploy.toml
          sed -i 's/YOUR_D1_DATABASE_ID_HERE/${{ secrets.CLOUDFLARE_D1_DATABASE_ID }}/g' wrangler.deploy.toml
          sed -i 's/YOUR_KV_NAMESPACE_ID_HERE/${{ secrets.CLOUDFLARE_KV_NAMESPACE_ID }}/g' wrangler.deploy.toml
          sed -i 's/your-project-name.pages.dev/${{ secrets.CLOUDFLARE_PAGES_URL }}/g' wrangler.deploy.toml

      - name: Deploy to Cloudflare Pages
        uses: cloudflare/wrangler-action@v3
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          command: pages deploy .next --config wrangler.deploy.toml --project-name ${{ secrets.CLOUDFLARE_PROJECT_NAME }}

      - name: Set environment variables
        uses: cloudflare/wrangler-action@v3
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          command: pages secret put OPENROUTER_API_KEY --project-name ${{ secrets.CLOUDFLARE_PROJECT_NAME }}
        env:
          OPENROUTER_API_KEY: ${{ secrets.OPENROUTER_API_KEY }}

      - name: Set IP hash salt
        uses: cloudflare/wrangler-action@v3
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          command: pages secret put IP_HASH_SALT --project-name ${{ secrets.CLOUDFLARE_PROJECT_NAME }}
        env:
          IP_HASH_SALT: ${{ secrets.IP_HASH_SALT }} 